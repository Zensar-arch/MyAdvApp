<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>LoginWebApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- ServletContext initialization Parameter info -->
  
  <context-param>
  <param-name>JDBCdriver</param-name>
  <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  
  <context-param>
  <param-name>jdbcUrl</param-name>
  <param-value>jdbc:mysql://localhost:3306/Advance</param-value>
  </context-param>
  
  <context-param>
  <param-name>dbUser</param-name>
  <param-value>root</param-value>
  </context-param>
  
  <context-param>
  <param-name>dbPassword</param-name>
  <param-value>root</param-value>
  </context-param>
  
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.zensar.login.LoginServlet</servlet-class>
    <!-- <init-param>
    <param-name></param-name> Servlet config initialization parameter info
    <param-value></param-value>
    </init-param> -->
     <!-- <init-param>
    <param-name></param-name> Servlet config initialization parameter info
    <param-value></param-value>
    </init-param> -->
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/checkUser</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Welcome</display-name>
    <servlet-name>Welcome</servlet-name>
    <servlet-class>com.zensar.login.WelcomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Welcome</servlet-name>
    <url-pattern>/Welcome</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>SearchServlet</display-name>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>com.zensar.login.SearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/searchInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>SearServlet</display-name>
    <servlet-name>SearServlet</servlet-name>
    <servlet-class>com.zensar.login.SearServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearServlet</servlet-name>
    <url-pattern>/searchServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ProductServlet</display-name>
    <servlet-name>ProductServlet</servlet-name>
    <servlet-class>com.zensar.products.ProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.zensar.logout.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <session-config>
  <session-timeout>1</session-timeout>
  
  </session-config>
</web-app>